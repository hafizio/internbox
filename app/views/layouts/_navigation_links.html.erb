<% if user_signed_in? %>
  <li class='active'><%= link_to 'New Project', new_project_path %></li>
  <li><%= link_to "#{current_user.email}" %></li>
  <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
  <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
<% elsif admin_signed_in? %>
  <li><%= link_to "#{current_admin.email} (Admin)" %></li>
  <li><%= link_to 'Edit Profile', edit_admin_registration_path %></li>
  <li><%= link_to 'Logout', destroy_admin_session_path, method: :delete %></li>
<% else %>
  <li class="active"><%= link_to 'Admin', new_admin_session_path %></li>
  <li><%= link_to 'Login', new_user_session_path %></li>
  <li class='active'><%= link_to 'Sign Up', new_user_registration_path %></li>
<% end %>
